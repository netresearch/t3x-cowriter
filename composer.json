{
    "name": "netresearch/t3-cowriter",
    "description": "TYPO3 extension that allows you to work on a page using an AI-powered co-author â€“ a digital assistant that helps you write your content.",
    "type": "typo3-cms-extension",
    "license": [
        "GPL-3.0-or-later"
    ],
    "homepage": "https://github.com/netresearch/t3-cowriter",
    "readme": "README.md",
    "keywords": [
        "typo3",
        "extension",
        "cowriter",
        "ai",
        "backend"
    ],
    "authors": [
        {
            "name": "Netresearch",
            "email": "thomas.schoene@netresearch.de",
            "homepage": "https://www.netresearch.de",
            "role": "Developer"
        },
        {
            "name": "Sebastian Koschel",
            "email": "sebastian.koschel@netresearch.de",
            "homepage": "https://www.netresearch.de",
            "role": "Developer"
        },
        {
            "name": "Martin Wunderlich",
            "email": "martin.wunderlich@netresearch.de",
            "homepage": "https://www.netresearch.de",
            "role": "Developer"
        },
        {
            "name": "Rico Sonntag",
            "email": "rico.sonntag@netresearch.de",
            "role": "Developer",
            "homepage": "https://www.netresearch.de/"
        }
    ],
    "support": {
        "issues": "https://github.com/netresearch/t3-cowriter/issues",
        "source": "https://github.com/netresearch/t3-cowriter",
        "docs": "https://github.com/netresearch/t3-cowriter"
    },
    "require": {
        "typo3/cms-core": "^12.4",
        "typo3/cms-backend": "^12.4",
        "typo3/cms-extbase": "^12.4",
        "openai-php/client": "^0.10.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "saschaegerer/phpstan-typo3": "^1.0 || v2.x-dev",
        "overtrue/phplint": "^9.5",
        "phpstan/phpstan": "^1.0 || ^2.0",
        "phpstan/phpstan-strict-rules": "^1.0 || ^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.0 || ^2.0",
        "ssch/typo3-rector": "^2.0 || ^3.0"
    },
    "config": {
        "bin-dir": ".build/bin",
        "vendor-dir": ".build/vendor",
        "discard-changes": true,
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform-check": false,
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "t3_cowriter",
            "web-dir": ".build/public"
        },
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Netresearch\\T3Cowriter\\": "Classes"
        }
    },
    "scripts": {
        "ci:cgl": [
            "php-cs-fixer fix --config Build/.php-cs-fixer.dist.php --diff --verbose --cache-file .build/.php-cs-fixer.cache"
        ],
        "ci:rector": [
            "rector process --config Build/rector.php"
        ],
        "ci:test:php:cgl": [
            "@ci:cgl --dry-run"
        ],
        "ci:test:php:lint": [
            "phplint --configuration Build/.phplint.yml"
        ],
        "ci:test:php:phpstan": [
            "phpstan analyze --configuration Build/phpstan.neon --memory-limit=-1"
        ],
        "ci:test:php:phpstan:baseline": [
            "phpstan analyze --configuration Build/phpstan.neon --memory-limit=-1 --generate-baseline Build/phpstan-baseline.neon --allow-empty-baseline"
        ],
        "ci:test:php:rector": [
            "@ci:rector --dry-run"
        ],
        "ci:test": [
            "@ci:test:php:lint",
            "@ci:test:php:phpstan",
            "@ci:test:php:rector",
            "@ci:test:php:cgl"
        ]
    }
}
